<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxl.mapper.TypeMapper">
    <resultMap id="typeMap" type="com.lxl.pojo.Type">
        <id  property="id" column="id"></id>
        <result property="name" column="name"/>
        <collection property="blogs" ofType="com.lxl.pojo.Blog">
            <id column="bid" property="id"/>
        </collection>
    </resultMap>
<!--    新增一个类型-->

    <insert id="save" parameterType="com.lxl.pojo.Type" >
        insert into t_type values (#{id},#{name})
    </insert>
    <update id="updateType" parameterType="map">
        update t_type set name=#{type.name} where id=#{id}
    </update>
    <delete id="delete" parameterType="long">
        delete from t_type where id=#{id}
    </delete>

    <select id="findAll" resultType="com.lxl.pojo.Type">
        select * from t_type order by  id desc
    </select>
    <select id="getTypeByName" resultType="com.lxl.pojo.Type" parameterType="string">
        select * from t_type where name=#{name}
    </select>
    <select id="getTypeById" resultType="com.lxl.pojo.Type" parameterType="long">
        select * from t_type where id=#{id}
    </select>

    <select id="findTop" resultMap="typeMap">
        select t.id,t.name
        from t_type t
    </select>
</mapper>